<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_weight_display_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证身份"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="司磅员名称："/>

            <EditText
                android:id="@+id/staff_member_number_et"
                android:hint="请刷司磅员卡"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:background="@drawable/shape_white_btn_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="IC卡密码："/>

            <EditText
                android:id="@+id/staff_member_pwd_et"
                android:hint="请输入IC卡密码"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:inputType="numberPassword"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:background="@drawable/shape_white_btn_bg"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_out_btn"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_btn_click"
            android:text="@string/string_login_out"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_weight_display_bg"
        android:layout_weight="1"
        android:padding="40dp"
        android:orientation="vertical">
        <com.axecom.smartweight.ui.view.SoftKey
            android:id="@+id/staff_member_softkey"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:listSelector="@null"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:numColumns="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/staff_member_done_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@drawable/shape_weight_display_bg"
                android:text="完成"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/staff_member_back_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_weight_display_bg"
                android:text="返回"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
