<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/green_3CB371">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_weight_display_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="重量端口配置："
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_weight_port_choose_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <Button
                        android:enabled="false"
                        android:id="@+id/local_settings_weight_port_choose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_btn_selector"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:enabled="false"
                        android:id="@+id/local_settings_weight_port_tv"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="打印机端口配置："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_printer_port_choose_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="内置打印机：/dev/ttyS4"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/local_settings_printer_port_choose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_green_bg"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:enabled="false"
                        android:id="@+id/local_settings_printer_port_tv"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="115200"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="打印份数配置："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_printer_count_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="清空交易数据(天)："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_transaction_data_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="秤板波特率："
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <TextView
                        android:enabled="false"
                        android:id="@+id/local_settings_weight_baudrate_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="服务器ip："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/local_settings_server_ip_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="服务器端口："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_server_port_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="外置LED端口配置："
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <TextView
                        android:enabled="false"
                        android:id="@+id/local_settings_led_port_choose_tv"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <Button
                        android:enabled="false"
                        android:id="@+id/local_settings_led_port_choose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_btn_selector"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="刷卡器端口配置："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_read_card_port_choose_tv"
                        android:layout_width="110dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/local_settings_read_card_port_choose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_green_bg"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="80dp"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:text="IC卡"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_green_bg"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="数据有效时间(天)："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_data_days_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="屏幕关闭(分钟)："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:enabled="false"
                        android:id="@+id/local_settings_sleep_time_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_white_btn_bg"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="刷卡器类型："
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/local_settings_read_card_type_choose_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:drawableBottom="@drawable/shape_black_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_555"
                        android:textSize="20sp" />

                    <Button
                        android:visibility="gone"
                        android:enabled="false"
                        android:id="@+id/local_settings_read_card_type_choose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_btn_selector"
                        android:text="@string/string_choose"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/local_settings_save_btn"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/shape_weight_display_bg"
                android:text="@string/save_txt"
                android:textSize="20sp" />

            <Button
                android:id="@+id/local_settings_back_btn"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_weight_display_bg"
                android:text="@string/string_settings_back_txt"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
