<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.activity.datasummary.SummaryActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#2E323E"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:drawableStart="@mipmap/tidno"
            android:gravity="center"
            android:paddingStart="40dp"
            android:paddingTop="15dp"
            android:paddingEnd="40dp"
            android:paddingBottom="15dp"
            android:text="报表"
            android:textColor="#7093C9"
            android:textSize="35sp" />


        <RadioGroup
            android:id="@+id/raidoGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="#2E323E"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <RadioButton
                android:id="@+id/serviceRbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_radio_click22"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/day_form"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"
                android:text="日报表"
                android:textColor="@color/color_white"
                android:textSize="30sp"
                />

            <RadioButton
                android:id="@+id/bottleRbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_radio_click22"
                android:button="@null"

                android:checked="false"
                android:drawableTop="@drawable/week_form"
                android:gravity="center"

                android:padding="15dp"
                android:text="月报表"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/dataRbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_radio_click22"
                android:button="@null"

                android:checked="false"
                android:drawableTop="@drawable/inventory"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"

                android:text="商品明细"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

        </RadioGroup>


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:background="#2E323E"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/settings9"
            android:text="返回"
            android:textSize="35sp"

            />
    </LinearLayout>

    <TextView
        android:layout_width="2dp"
        android:layout_height="match_parent"

        android:layout_marginTop="1dp"
        android:background="@drawable/shape_text_line_divide" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />

</LinearLayout>
