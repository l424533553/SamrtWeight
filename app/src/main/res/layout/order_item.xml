<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_item_id_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="ax0382018042716005"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_dealTime_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2018-04-27"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_seller_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="牛总"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_buyer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="默认买方"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_weight_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="127.80"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_income_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="127.80"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_billing_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="微信支付"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_item_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="已作废"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/order_item_invalid_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape_weight_display_bg"
        android:gravity="center"
        android:padding="0dp"
        android:text="作废"
        android:textColor="@color/black"
        android:textSize="20sp" />


</LinearLayout>

