<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_weight_display_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wifi_setting" />

            <TextView
                android:id="@+id/wifi_settings_ssid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安鑫宝市场wifi"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/wifi_settings_connected_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/u3192"/>
    </FrameLayout>
</LinearLayout>
