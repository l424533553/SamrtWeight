<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- 第一层  上部和左部偏移一定距离-->

    <item
        android:left="2.66dp"
        android:top="2.66dp">
        <shape android:shape="oval">
            <solid android:color="@color/gray_ae" />
            <!-- 边框的颜色和粗细 -->
            <size android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <!-- 第二层 下部和有部偏移一定距离-->
    <item
        android:bottom="2.66dp"
        android:right="2.66dp">
        <shape  android:shape="oval">
            <solid android:color="#ffffff" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/gray_ae" />
        </shape>
    </item>

</layer-list>

